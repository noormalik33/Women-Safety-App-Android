<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- Pressed state: solid darkest color -->
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/purple_darkest" />
        </shape>
    </item>
    <item>
        <!-- Default state: professional gradient effect -->
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="45"
                android:startColor="@color/purple_normal"
                android:endColor="@color/purple_darkest"
                android:type="linear" />
        </shape>
    </item>
</selector>