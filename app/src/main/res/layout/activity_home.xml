<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_darkest"
    tools:context=".HomeActivity">

    <!-- Glassy Card Container for the main content -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Inner Layout with Glass Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_card_background"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center_horizontal">

            <!-- Welcome Title -->
            <TextView
                android:id="@+id/tvWelcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Women Safety App"
                android:textColor="@color/purple_white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvHomeSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your security is our priority."
                android:textColor="@color/purple_normal"
                android:textSize="18sp"
                android:layout_marginBottom="40dp" />

            <!-- Sign Out Button (Required ID: btnSignOut) -->
            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button_background"
                android:backgroundTint="@null"
                android:text="S I G N  O U T"
                android:textColor="@color/text_light"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>